<div class=" col-lg-12 reportajes">
          <a href="reportajes">
            <h3 class="mt-3" style="text-align: center;">Historio del</h3>
            </a>
            <hr>
            <div class="col-lg-3">
            <?php 
          // The Query
          $the_query = new WP_Query( array( 'posts_per_page' => 3,  'category_name' => 'reportajes'));
          // The Loop
          if ( $the_query->have_posts() ) : ?>    
            <?php while ( $the_query->have_posts() ) :
                          $the_query->the_post(); ?>
                <a href="<?php the_permalink() ?>">
                <p><?php the_title()?></p>
                <?php if ( has_post_thumbnail() ) 
                        {the_post_thumbnail('post-thumbnails' , array('class' => 'img-fluid '));
                        }
                        ?>
              <p style="margin: 10px;"><?php the_excerpt() ?></p>
              <button class="btn btn-block"><p style="text-align: center;">
                <a href="<?php the_permalink() ?>">click aca</a></p></button>
                </a>
                      
        
                <?php endwhile ?>
            <?php wp_reset_postdata();
                    else : ?>
                        <p>no posts found </p> 
                <?php endif; ?>  
                </div>
            
           
          </div>